{
  "name": "ed_engine_editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build-engine && run-p type-check build:web",
    "build-portable": "npm run build-engine && run-p type-check build:portable",
    "build:web": "vite build && node scripts/copy_public.js",
    "build:portable": "vite build --mode portable",
    "build-font": "node scripts/build_font.js",
    "build-engine": "node scripts/build_engine.js",
    "dev": "npm run build-engine && vite",
    "dev-network": "npm run build-engine && vite --host",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|vue)\" --locales \"./src/locales/**/*.json\"",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@intlify/unplugin-vue-i18n": "^0.8.1",
    "@vue/cli-shared-utils": "^5.0.8",
    "canvas": "^3.1.0",
    "pinia": "^2.0.28",
    "vue": "^3.2.45",
    "vue-i18n": "^11.1.2"
  },
  "devDependencies": {
    "@intlify/vue-i18n-loader": "^3.0.0",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "esbuild": "^0.16.10",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.2",
    "typescript": "^5.8.2",
    "vite": "^4.0.0",
    "vite-plugin-filter-replace": "^0.1.9",
    "vite-plugin-singlefile": "^0.13.2",
    "vite-svg-loader": "^4.0.0",
    "vue-cli-plugin-i18n": "~2.3.2",
    "vue-tsc": "^2.2.8"
  }
}
