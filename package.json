{
  "name": "ed_engine_editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "run-p type-check build-only",
    "build-deps": "npm run build-font && concurrently \"npm run build-engine\" \"npm run build-shared\"",
    "build-deps:dev": "npm run build-font && concurrently \"npm run build-engine:dev\" \"npm run build-shared:dev\"",
    "build-engine": "node ./scripts/build_engine.js",
    "build-engine:dev": "node ./scripts/build_engine.js --debug",
    "build-font": "node ./scripts/build_font.js",
    "build-only": "vite build",
    "build-portable": "npm run build-deps && vue-cli-service build --mode portable",
    "build-shared": "node ./scripts/build_shared.js",
    "build-shared:dev": "node ./scripts/build_shared.js --debug",
    "dev": "vite",
    "i18n:report": "vue-cli-service i18n:report --src \"./src/**/*.?(js|vue)\" --locales \"./src/locales/**/*.json\"",
    "preview": "vite preview",
    "serve:editor": "vue-cli-service serve",
    "serve:engine": "watch \"npm run build-engine:dev\" ./engine --interval=0.01",
    "serve:shared": "watch \"npm run build-shared:dev\" ./shared --interval=0.01",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@vue/cli-shared-utils": "^5.0.8",
    "npm-watch": "^0.11.0",
    "pinia": "^2.0.28",
    "vue": "^3.2.45",
    "vue-i18n": "^9.1.0"
  },
  "devDependencies": {
    "@intlify/vue-i18n-loader": "^3.0.0",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/tsconfig": "^0.1.3",
    "concurrently": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.70.1",
    "typescript": "~4.7.4",
    "uglify-js": "^3.15.3",
    "vite": "^4.0.0",
    "vue-cli-plugin-i18n": "~2.3.1",
    "vue-tsc": "^1.0.12"
  }
}
